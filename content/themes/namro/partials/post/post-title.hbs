<div class="post-header">

	{{#if feature_image}}
		<div class="post-cover" style="background-image: url({{feature_image}})"></div>
	{{/if}}

	<div class="inner">
		<h1 class="post-title">{{title}}</h1>
		<div class="post-meta">
			<span class="date"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMMM YYYY"}}</span>
			<span class="divide"></span>
			{{#foreach authors}}
			<span class="byauthor">{{{t "By <a href='{href}'>{name}</a>" href=(url) name=name}}}</span>
			{{/foreach}}
		</div>
	</div>
	
</div>
