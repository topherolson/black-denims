<article id="post" class="post-{{comment_id}} {{post_class}}">

	{{!-- Location: partials/post/post-title.hbs --}}
	{{> "post/post-title"}}

	<div class="inner">
		<div class="post-content">
			{{content}}

			{{!-- Location: partials/post/post-meta.hbs --}}
			<!-- {{> "post/post-meta"}} -->

			{{!-- Location: partials/post/post-sharing.hbs --}}
			{{> "post/post-sharing"}}

			{{!-- Location: partials/post/post-author.hbs --}}
			<!-- {{> "post/post-author"}} -->
		</div>
		<div class="sidebar-post">
			<h4  class="widget-title">{{t "Recent Posts"}}</h4>

			{{#get "posts" limit="3"}}


			    {{#foreach posts}}
			        <!-- <li>
			            <a href="{{url}}">{{title}}</a>
			        </li> -->
					<div style="widget:100%;height:150px">
						<div class="entry-content">

					        <div class="entry-overlay"></div>

					        {{#if feature_image}}
					            <div class="entry-cover" style="background-image: url({{feature_image}})"></div>
					        {{/if}}

					        <header class="entry-header">
					            <a class="entry-link" href="{{url}}"></a>
					            <h2 class="entry-title"><a href="{{url}}">{{title}}</a></h2>
					            <div class="entry-meta">
					                {{#foreach authors}}
					                <!-- span class="byauthor">{{{t "By <a href='{href}'>{name}</a>" href=(url) name=name}}}</span> -->
					                {{/foreach}}
					            </div>
					        </header>

					    </div>
					</div>
			    {{/foreach}}
				<div style="clear:both">
				<br/>


				</div>

			{{/get}}

