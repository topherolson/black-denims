{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The main content area --}}
<main id="main-content">

    {{#author}}
    <div class="post-header">

        {{#if cover_image}}
            <div class="post-cover {{#if cover_image}}" style="background-image: url({{cover_image}}){{else}}no-cover{{/if}}"></div>
        {{/if}}

        <div class="inner">
            {{#if profile_image}}
                <img class="archive-profile-image" src="{{profile_image}}" alt="{{name}}">
            {{/if}}
            <h1 class="archive-title post-title">{{name}}</h1>
            <div class="archive-author-location">
                {{#if location}}
                <span>{{location}}</span>
                {{/if}}
                {{#if website}}
                <span><a class="social-link social-link-wb" href="{{website}}" target="_blank" rel="noopener">{{website}}</a></span>
                {{/if}}
                <span>{{plural ../pagination.total empty=(t "No posts") singular=(t "1 post") plural=(t "% posts")}}</span>
            </div>
            {{#if bio}}
            <div class="archive-desc">{{bio}}</div>
            {{/if}}
            <div class="archive-author-link">
                {{#if twitter}}
                <a class="social-link" href="{{twitter_url}}" target="_blank" rel="noopener"><span class="ion-social-twitter"></span></a>
                {{/if}}
                {{#if facebook}}
                <a class="social-link" href="{{facebook_url}}" target="_blank" rel="noopener"><span class="ion-social-facebook"></span></a>
                {{/if}}
                <a class="social-link" href="http://cloud.feedly.com/#subscription/feed/{{url absolute="true"}}/rss/" target="_blank" rel="noopener"><span class="ion-social-rss"></span></a>
            </div>
        </div>
        
    </div>
    {{/author}}

    <div class="container">  

        <div class="content grid">
            {{#foreach posts}}

                {{!-- Location: partials/post/post-card.hbs --}}
                {{> "post/post-card"}}

            {{/foreach}}
        </div>

        {{!-- Location: partials/pagination.hbs --}}
        {{> "pagination"}}
        
    </div>

</main>