{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The main content area --}}
<main id="main-content">

    {{#tag}}
    <div class="post-header">

        {{#if feature_image}}
            <div class="post-cover {{#if feature_image}}" style="background-image: url({{feature_image}}){{else}}no-cover{{/if}}"></div>
        {{/if}}

        <div class="inner">
            <h1 class="archive-title">{{name}}</h1>
            
        </div>

    </div>
    {{/tag}}

    <div class="container">

        <div class="content grid">
            {{#foreach posts}}

                {{!-- Location: partials/post/post-card.hbs --}}
                {{> "post/post-card"}}

            {{/foreach}}
        </div>

        {{!-- Location: partials/pagination.hbs --}}
        {{> "pagination"}}

    </div>

</main>
